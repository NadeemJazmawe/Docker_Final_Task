pipeline{

	agent any

	environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}

	stages {

		stage('Build') {

			steps {
				sh 'sudo docker build -t medris2796/bitcoin-final-task:latest .'
			}
		}

		 stage('Push Image') {
      steps {
			sh 'docker push nadeemjazmawe/bitcoin-price'
        }
      }
    }


		
	}

	post {
		always {
			sh 'docker logout'
		}
	}

}
