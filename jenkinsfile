pipeline {

  agent any

  environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}

  stages {

    stage('Login to dockerhub') {

	steps {
	}
    }

    stage('Build Image') {
      steps {
      }
    }

    stage('Push Image') {
      steps {
        }
      }
    }
  

  post {
        success {
            slackSend channel: 'jenkins_closing_task', message: 'Build Success'
        }
         
        failure {
            slackSend channel: 'jenkins_closing_task', message: 'Build Failed'
        }
    }
    
}
