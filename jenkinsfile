pipeline {

  agent any

  environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}

  stages {


    stage('Build Image') {
      steps {
        sh 'sudo docker build -t nadeemjazmawe/bitcoin-price:1.0 .'
      }
    }

    stage('Push Image') {
      steps {
			sh 'sudo docker push nadeemjazmawe/bitcoin-price:1.0'
        }
      }
    }

    
}
