pipeline {

  agent any

  environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}

  stages {


    stage('Build Image') {
      steps {
        sh 'sudo docker build -t bitcoin-price:latest .'
      }
    }

    stage('Push Image') {
      steps {
			sh 'sudo docker push nadeemjazmawe/bitcoin-price'
        }
      }
    }

    
}
